@model FileSharer.Web.Models.RegisterModel



<section data-bs-version="5.1" class="header1 cid-s48MCQYojq mbr-fullscreen" id="header1-f">
 <div class="container">
        <div class="mbr-section-head">
            <h3 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2">
                <strong>Регистрация</strong>
            </h3>

        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-lg-8 mx-auto mbr-form" data-form-type="formoid">
                <form class="mbr-form form-with-styler mx-auto" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                   
                    <p class="mbr-text mbr-fonts-style align-center mb-4 display-7">
                        "Каким файлообменником ты пользуешься?" "Конечно-же Файлообменник!"
                        (когда-нибудь придумать название)
                    </p>
                    <div class="row">
                        <div hidden="hidden" data-form-alert="" class="alert alert-success col-12">Спасибо, что выбрали наш лучший фалооменник!</div>
                        <div hidden="hidden" data-form-alert-danger="" class="alert alert-danger col-12">
                            Проверьте введенные данные
                        </div>
                    </div>
                    <div class="dragArea row">
                        <div class="col-lg-12 col-md-12 col-sm-12 form-group mb-3" >
                            <span asp-validation-for="FirstName" />
                            <input type="text" asp-for="FirstName" placeholder="Имя"  class="form-control" id="name-form7-t">
                            <span asp-validation-for="FirstName" />
                        </div>
                        
                         <div class="col-lg-12 col-md-12 col-sm-12 form-group mb-3">
                             <span asp-validation-for="LastName" />
                            <input type="text" asp-for="LastName" type="text" placeholder="Фамилия" class="form-control" id="lastname">
                            <span asp-validation-for="LastName" />
                        </div>
                        
                        <div class="col-lg-12 col-md-12 col-sm-12 form-group mb-3">
                            <span asp-validation-for="Email" />
                            <input type="email" asp-for="Email" placeholder="Email"  class="form-control" id="email-form7-t">
                            <span asp-validation-for="Email" />
                        </div>
                        
                        <div data-for="phone" class="col-lg-12 col-md-12 col-sm-12 form-group mb-3">
                            <span asp-validation-for="Password" />
                            <input type="password" asp-for="Password"  placeholder="Пароль"  class="form-control" id="pass">
                            <span asp-validation-for="Password" />
                        </div>
                         <div data-for="phone" class="col-lg-12 col-md-12 col-sm-12 form-group mb-3">
                             <span asp-validation-for="ConfirmPassword" />
                            <input type="password" asp-for="ConfirmPassword" placeholder="Введите пароль повторно"  class="form-control" id="confPass">
                            <span asp-validation-for="ConfirmPassword" />
                        </div>
                        <div class="col-auto mbr-section-btn align-center">
                            <button type="submit" class="btn btn-primary display-4">Зарегестрироваться</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

